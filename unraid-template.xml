<?xml version="1.0"?>
<Container version="2">
  <Name>WM-Slot-Booking</Name>
  <Repository>linuxserver/docker-compose</Repository>
  <Registry>https://hub.docker.com/r/linuxserver/docker-compose</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/yourusername/wm-slot-booking/issues</Support>
  <Project>https://github.com/yourusername/wm-slot-booking</Project>
  <Overview>WM Slot Booking System - Laravel application for managing warehouse time slot bookings. Automatically deploys from Git repository with full Docker stack including MySQL, Redis, and Nginx.</Overview>
  <Category>Productivity:</Category>
  <WebUI>http://[IP]:[PORT:8080]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/yourusername/wm-slot-booking/main/unraid-template.xml</TemplateURL>
  <Icon>https://laravel.com/img/logomark.min.svg</Icon>
  <ExtraParams>--init</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1691234567</DateInstalled>
  <DonateText>Support this project</DonateText>
  <DonateLink>https://github.com/sponsors/yourusername</DonateLink>
  <Requires>Internet connection for Git clone</Requires>
  
  <!-- Port Mappings -->
  <Config Name="Web Port" Target="8080" Default="8080" Mode="tcp" Description="Web interface port (Laravel app)" Type="Port" Display="always" Required="true" Mask="false">8080</Config>
  <Config Name="Database Port" Target="3306" Default="3306" Mode="tcp" Description="MySQL database port (optional external access)" Type="Port" Display="advanced" Required="false" Mask="false">3306</Config>
  <Config Name="Database Admin Port" Target="8081" Default="8081" Mode="tcp" Description="Adminer database management interface" Type="Port" Display="advanced" Required="false" Mask="false">8081</Config>
  
  <!-- Volume Mappings -->
  <Config Name="App Data" Target="/config" Default="/mnt/user/appdata/wm-slot-booking" Mode="rw" Description="Application data, database, and configuration files" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/wm-slot-booking</Config>
  
  <!-- Environment Variables -->
  <Config Name="Git Repository URL" Target="GIT_REPO" Default="https://github.com/yourusername/wm-slot-booking.git" Mode="" Description="Git repository URL to clone from" Type="Variable" Display="always" Required="true" Mask="false">https://github.com/yourusername/wm-slot-booking.git</Config>
  <Config Name="Git Branch" Target="GIT_BRANCH" Default="main" Mode="" Description="Git branch to deploy (main, develop, etc.)" Type="Variable" Display="advanced" Required="false" Mask="false">main</Config>
  <Config Name="Application URL" Target="APP_URL" Default="http://localhost:8080" Mode="" Description="Full URL where the application will be accessible (update with your Unraid IP)" Type="Variable" Display="always" Required="true" Mask="false">http://localhost:8080</Config>
  <Config Name="MySQL Root Password" Target="MYSQL_ROOT_PASSWORD" Default="GenerateSecurePassword123!" Mode="" Description="MySQL root password (CHANGE THIS!)" Type="Variable" Display="always" Required="true" Mask="true">GenerateSecurePassword123!</Config>
  <Config Name="MySQL User Password" Target="MYSQL_PASSWORD" Default="SecureUserPassword456!" Mode="" Description="MySQL application user password (CHANGE THIS!)" Type="Variable" Display="always" Required="true" Mask="true">SecureUserPassword456!</Config>
  <Config Name="Auto Update" Target="AUTO_UPDATE" Default="true" Mode="" Description="Automatically pull latest changes from Git on container restart" Type="Variable" Display="advanced" Required="false" Mask="false">true</Config>
  <Config Name="App Environment" Target="APP_ENV" Default="production" Mode="" Description="Laravel environment (production recommended)" Type="Variable" Display="advanced" Required="false" Mask="false">production</Config>
  <Config Name="App Debug" Target="APP_DEBUG" Default="false" Mode="" Description="Enable debug mode (false recommended for production)" Type="Variable" Display="advanced" Required="false" Mask="false">false</Config>
  <Config Name="User ID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="Group ID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
  <Config Name="Timezone" Target="TZ" Default="America/New_York" Mode="" Description="Container timezone" Type="Variable" Display="advanced" Required="false" Mask="false">America/New_York</Config>
  
  <!-- Commands to run on startup -->
  <Config Name="Setup Command" Target="SETUP_CMD" Default="git clone $GIT_REPO /config/app || (cd /config/app && git pull); cd /config/app && docker-compose -f docker-compose.unraid.yml up -d" Mode="" Description="Command to setup and run the application" Type="Variable" Display="never" Required="false" Mask="false">git clone $GIT_REPO /config/app || (cd /config/app && git pull); cd /config/app && docker-compose -f docker-compose.unraid.yml up -d</Config>
</Container>